# Project name (used by Docker Compose)
COMPOSE_PROJECT_NAME=flask_template

# Flask application settings
FLASK_ENV=development                   # Set to "production" in production
FLASK_APP=src.app
FLASK_DEBUG=1                           # Set to 0 or remove in production

# PostgreSQL configuration
POSTGRES_DB=db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password_here    # Required: must not be empty
POSTGRES_HOST=db                        # Hostname of the database container
POSTGRES_PORT=5432                      # Default PostgreSQL port